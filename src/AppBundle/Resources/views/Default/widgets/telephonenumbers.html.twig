{% set foo = ['bg-teal','bg-green', 'bg-olive' , 'bg-lime' , 'bg-yellow' ,'bg-orange' , 'bg-fuchsia' ,'bg-purple','bg-teal'] %}
 {% for telephoneListgroup in telephoneListgroups   %}
  {% if telephoneListgroup.groupname is not null and telephoneListgroup.groupname != ""  %}
