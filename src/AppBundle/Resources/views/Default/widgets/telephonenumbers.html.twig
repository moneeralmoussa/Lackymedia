 <table class="table table-hover">
  <tbody>
 {% for Telephone in TelephoneList   %}
  {% if telephoneListgroup.groupname == Telephone.Groupname %}
                <tr>
                  <td><i class="fa fa-user"></i> {{ Telephone.name }}</td>
                    <td align='right'><a href="tel:{{Telephone.telephone|replace({'-': ''})}}" style="color:black"><i class="fa fa-phone"></i>
